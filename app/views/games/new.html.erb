<h1>Word Smith</h1>
<p>Guess a word from the letters below:</p>

<ul>
  <% @letters.each do |letter|  %>
    <li class="letters">
      <%= letter %>
    </li>
  <% end %>
</ul>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="input" placeholder="Best guesses?">
  <input type="submit" value="Submit" class="btn-info">
</form>
